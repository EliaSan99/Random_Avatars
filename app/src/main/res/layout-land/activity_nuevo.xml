<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NuevoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/viewNombre"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="@string/hint_nombre" />

            <EditText
                android:id="@+id/txtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:labelFor="@+id/viewNombre"
                android:textColor="#000000"
                android:textSize="18sp"
                />

            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/viewApellidos"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_ApellidoP" />

            <EditText

                android:id="@+id/txtApellidos"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:labelFor="@+id/viewCorreo"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/viewApellidoM"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_ApellidoM" />

            <EditText

                android:id="@+id/txtApellidoM"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:labelFor="@+id/viewCorreo"
                android:textSize="18sp" />

            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                android:id="@+id/viewSexo"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_Sexo" />

            <EditText

                android:id="@+id/txtSexo"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:maxLength="1"
                android:labelFor="@+id/viewCorreo"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
        <TextView
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:id="@+id/viewMatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_Matricula" />

        <EditText

            android:id="@+id/txtMatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:textColor="#000000"
            android:maxLength="11"
            android:digits="1234567890"
            android:labelFor="@+id/viewTelefono"
            android:textSize="18sp" />

            <TextView
                android:textSize="18sp"
                android:id="@+id/viewFecha"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_Fecha_nacimiento" />

            <EditText
                android:layout_marginLeft="2dp"
                android:id="@+id/txtFecha_nacimiento"
                android:textColor="#000000"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text|date"
                android:labelFor="@+id/viewCorreo"
                android:layout_marginBottom="10dp"
                android:textSize="18sp" />



            <ImageButton
                android:id="@+id/btnfecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="abrircalendario"
                android:layout_marginStart="5dp"
                android:src="@drawable/calendar"
                android:text="Fecha" />

        </LinearLayout>


        <Button
            android:id="@+id/btnGuarda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/tajetas"
            android:text="@string/btn_guarda"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>